<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls ="clr-namespace:VocaKnow.controls"
             x:Class="VocaKnow.controls.SettingImageButton"
             Padding="0">

    <Grid x:Name="SettingImageButtonView" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="Enter.png"  Scale="0.5" Grid.Column="0"  />
        <Label x:Name="lblEditor" Grid.Column="2"
			   VerticalOptions="Center"
			   HorizontalOptions="Start"
			   HorizontalTextAlignment="Start"
			   VerticalTextAlignment="Center"
			   TextColor="White"
			   FontAttributes="Bold"
			   FontSize="20"
               Text="" />
    </Grid>
    
</ContentView>